{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2015", "dom", "dom.iterable"],

        "strict": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,

        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}